easyblock = 'Bundle'

name = 'IMAS'
version = 'develop'
local_dd_version = '@DD_VERSION@'
local_versionsuffix = f'-DD-{local_dd_version}'
versionprefix = f'{local_dd_version}-'

description = 'IMAS Bundle - depends on all Access Layer modules'
homepage = 'https://imas.iter.org/'

toolchain = {'name': 'intel', 'version': '2020b'}

dependencies = [
    # Main dependencies: HLIs
    ('IMAS-AL-Cpp', version, local_versionsuffix),
    ('IMAS-AL-Fortran', version, local_versionsuffix),
    ('IMAS-AL-Java', version, f'-Java-11{local_versionsuffix}'),
    ('IMAS-AL-Matlab', version, local_versionsuffix),
    ('IMAS-AL-Python', version, local_versionsuffix),
    # Related modules:
    ('IDStools', '1.14.1'),
]

moduleclass = 'tools'
